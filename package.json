{
  "name": "dendra-colors",
  "version": "0.0.1",
  "description": "Dendra color constants for charts and dashboards.",
  "license": "BSD-2-Clause-FreeBSD",
  "author": "J. Scott Smith <scott@newleafsolutionsinc.com>",
  "main": "dist/node/index.js",
  "scripts": {
    "babel-node": "babel --presets \"es2015-node6\" --no-babelrc src -d dist/node",
    "build": "npm run build:prod",
    "build:dev": "npm run build-browser:dev && npm run build-node:dev",
    "build:prod": "npm run build-browser:prod && npm run build-node:prod",
    "build-browser:dev": "npm run clean-browser && npm run webpack:dev",
    "build-browser:prod": "npm run clean-browser && npm run webpack:prod",
    "build-node": "npm run lint && npm run clean-node && npm run babel-node",
    "build-node:dev": "NODE_ENV=development npm run build-node",
    "build-node:prod": "NODE_ENV=production npm run build-node",
    "clean": "npm run clean-browser && npm run clean-node",
    "clean-browser": "rm -rf dist/browser/*",
    "clean-node": "rm -rf dist/node/*",
    "lint": "eslint src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack:dev": "webpack --config ./config/webpack.config.js --env=dev",
    "webpack:prod": "webpack --config ./config/webpack.config.js --env=prod"
  },
  "engines": {
    "node": ">=6.11.0"
  },
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "chroma-js": "^1.3.4"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-node6": "^0.4.0",
    "eslint": "^4.1.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "webpack": "^3.0.0",
    "webpack-merge": "^4.1.0"
  },
  "optionalDependencies": {
    "fsevents": "^1.0.0"
  }
}
